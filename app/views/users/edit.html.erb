
  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <div class="card text-center">
            <div class="card-header">
              <h2>Editer le profil</h2>
            </div>
            <div class="card-body">
            <%= form_for @user do |f| %>


              <p class="card-text">
              <div class="field">
                      <%= f.label :first_name %><br />
                      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                      </div>
              </p>

              <p class="card-text">
              <div class="field">
                      <%= f.label :last_name %><br />
                      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                      </div>
              </p>

              <p class="card-text">
              <div class="field">
                      <%= f.label :description %><br />
                      <%= f.text_field :description, autofocus: true, autocomplete: "description" %>
                      </div>
              </p>

              <p class="card-text">
              <div class="actions">
                        <button type="submit" class="btn btn-outline-primary">Update</button>
                        
                      </div>
              </p>
              
              <% end %>
              
            </div>
            <div class="card-footer text-muted">
              
            </div>
          </div>

        
          <hr class="divider my-4">
        </div>
        <div class="col-lg-8 align-self-baseline">

        </div>
      </div>
    </div>
  </header>
