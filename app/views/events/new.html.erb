

  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <div class="container">
            <div class="card text-center">
              <div class="card-header">
                 
              </div>
              <div class="card-body">
                <h4 class="card-title">Crée ton Evénement</h4><br/>
                <p class="card-text">  
                          <% if @newevent.errors.any? %>
                            <div class="alert alert-danger" role="alert">
                              <p>Nous n'avons pas réussi à modifier le potin pour la (ou les) raison(s) suivante(s) :</p>
                              <ul>
                                <% @newevent.errors.full_messages.each do |message| %>
                                  <li><%= message %></li>
                                <% end %>
                              </ul>
                            </div>
                          <% end %>
                
                <%= form_for @newevent, url: events_path, html: {method: :post, class: "form-signin mt-3" } do |f| %>

                  <div class="field">
                    <%= f.label :title %><br />
                    <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
                  </div>

                  <div class="field">
                    <%= f.label :description %><br />
                    <%= f.text_field :description, autofocus: true, autocomplete: "description" %>
                  </div>

                  <div class="field">
                    <%= f.label :location %><br />
                    <%= f.text_field :location, autofocus: true, autocomplete: "location" %>
                  </div>

                  <div class="field">
                    <%= f.label :duration %><br />
                    <%= f.number_field :duration, autofocus: true,in: 5..180, step: 5, autocomplete: "duration" %>
                  </div>

                  <div class="field">
                    <%= f.label :price %><br />
                    <%= f.number_field :price, autofocus: true,in: 1..1000, step:1, autocomplete: "price" %>
                  </div>

                  <div class="field">
                    <%= f.label :start_date %><br />
                    <%= f.date_field :start_date, autofocus: true, autocomplete: "start_date" %>
                  </div><br/>


                <button type='submit' class="btn btn-update"> Créer l'évenement </button>
                

                <%end%>
                
                </p>
                <div class="text-muted">
                  
                </div><br/>
                
              </div>
              <div class="card-footer text-muted">


              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-8 align-self-baseline">
          <p class="text-white-75 font-weight-light mb-5"></p>
          
        </div>
      </div>
    </div>
  </header>






